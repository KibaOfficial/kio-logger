{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "rootDir": "./src/",
    "outDir": "./lib/esm",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "declaration": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
